    <sql id="selectSysAdmissionInfoVo">
        select admission_id, student_name, id_number, student_id, gender, graduate_school, diploma_specialty, graduation_date, admitted_university, admitted_specialty, admission_batch, admission_date, admission_status, contact_number, contact_address, admission_type, candidate_type, exam_ticket_number, exam_score, remarks, create_by, create_time, update_by, update_time from sys_admission_info
    </sql>

    <select id="selectSysAdmissionInfoList" parameterType="SysAdmissionInfo" resultMap="SysAdmissionInfoResult">
        <include refid="selectSysAdmissionInfoVo"/>
        <where>  
            <if test="studentName != null  and studentName != ''"> and student_name like concat('%', #{studentName}, '%')</if>
            <if test="idNumber != null  and idNumber != ''"> and id_number = #{idNumber}</if>
            <if test="studentId != null  and studentId != ''"> and student_id = #{studentId}</if>
            <if test="admissionStatus != null  and admissionStatus != ''"> and admission_status = #{admissionStatus}</if>
        </where>
    </select>
    
    <select id="selectSysAdmissionInfoByAdmissionId" parameterType="Long" resultMap="SysAdmissionInfoResult">
        <include refid="selectSysAdmissionInfoVo"/>
        where admission_id = #{admissionId}
    </select>

